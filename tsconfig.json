{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "DOM"
    ]
  },
  "exclude": [
    "bin",
    "public",
    "views",
    "dist",
    "node_modules",
    "webpack.config.js"
  ],
  "compileOnSave": true,
  "buildOnSave": false
}